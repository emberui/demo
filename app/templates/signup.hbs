 <div class="box signup">
  <div class="signup-left">
    New Account
  </div>

  <div class="divider"></div>

  <div class="signup-right">
    <h4>Login Details</h4>
    <div class="field-row">
      {{eui-input size="large" required="true" placeholder="Email Address" width="100%"}}
    </div>
    <div class="field-row">
      <div class="row-item">
        {{eui-input type="password" required="true" size="large" placeholder="Password" width="100%"}}
      </div>
      <div class="row-item">
        {{eui-input type="password" required="true" size="large" placeholder="Confirm Passwords" width="100%"}}
      </div>
    </div>

    <h4>Avatar</h4>
    <p>
      We would like some sort of image to represent you with.
    </p>
    <div class="avatar">
      {{eui-button label="Select Avatar" size="small" action="selectAvatar"}}
    </div>

    {{eui-button label="Create Account" style="primary" action="createAccount"}}
  </div>
</div>
